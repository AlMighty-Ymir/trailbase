---
interface Props {
  tags: string[] | undefined;
}

const { tags }: Props = Astro.props;
---

{
  tags && (
    <div class="m-0 flex flex-row items-center gap-2">
      {tags.map((tag) => (
        <span
          class:list={[
            "px-3",
            "py-2",
            "rounded-full",
            "border-[1px]",
            "bg-transparent",
            "leading-none",
          ]}
        >
          {tag}
        </span>
      ))}
    </div>
  )
}
