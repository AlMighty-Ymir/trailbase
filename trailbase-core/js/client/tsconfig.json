{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": false,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@bindings/*": ["../../bindings/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
