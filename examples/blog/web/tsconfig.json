{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@bindings/*": ["../../trailbase-core/bindings/*"],
      "@schema/*": ["./types/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "types",
    "public"
  ]
}
