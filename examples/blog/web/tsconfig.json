{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      // Only needed when "trailbase" package is pulled from workspace:
      // "@bindings/*": ["../../../crates/assets/js/bindings/*"],
      "@schema/*": ["./types/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "types",
    "public"
  ]
}
