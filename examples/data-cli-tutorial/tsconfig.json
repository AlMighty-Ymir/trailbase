{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": false,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@schema/*": ["./types/*"],
      "@bindings/*": ["../../trailbase-assets/js/bindings/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
